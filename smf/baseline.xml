<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='omicron-baseline'>
  <service name='system/omicron/baseline' type='service' version='0'>
    <create_default_instance enabled='true'/>
    <single_instance/>
    <dependency name='fs-local' grouping='require_all' restart_on='none'
      type='service'>
      <service_fmri value='svc:/system/filesystem/local'/>
    </dependency>
    <exec_method name='start' type='method'
      exec='/usr/lib/brand/omicron1/baseline -w %{config/path}'
      timeout_seconds='600'/>
    <exec_method name='stop' type='method' exec=':true' timeout_seconds='3'/>
    <exec_method name='refresh' type='method' exec=':true' timeout_seconds='3'/>
    <property_group name='config' type='application'>
      <propval name='path' type='astring'
        value='/var/run/brand/omicron1/baseline'/>
    </property_group>
    <property_group name='startd' type='framework'>
      <propval name='duration' type='astring' value='transient'/>
    </property_group>
    <stability value='Unstable'/>
    <template>
      <common_name>
        <loctext xml:lang='C'>Omicron brand baseline generation</loctext>
      </common_name>
      <documentation>
        <manpage title='omicron1' section='5' manpath='/usr/share/man'/>
      </documentation>
    </template>
  </service>
</service_bundle>
